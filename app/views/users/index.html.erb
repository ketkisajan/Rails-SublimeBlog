<h1 align="center">All Sublime Bloggers</h1>

<div align="center">
  
 <%= will_paginate %> 

  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
         
 <% if logged_in? %>
  <li><%= link_to "Edit user", edit_user_path(user), class: "btn btn-outline-info"%></li>
 <% if current_user.admin? %> 

      <li><%= link_to "Delete user", user_path(user), method: :delete, data: {confirm: "Are you sure?"} %></li>
        
 <% end %> 
 <% end %>

        </div>
        </div>
  
    </ul>
  <% end %>

 <%= will_paginate %> 

</div>